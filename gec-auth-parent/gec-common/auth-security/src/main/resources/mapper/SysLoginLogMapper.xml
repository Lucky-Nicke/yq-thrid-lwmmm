<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanxige.mapper.SysLoginLogMapper">
    <resultMap id="SysLoginLog" type="com.lanxige.model.system.SysLoginLog" autoMapping="true"></resultMap>

    <sql id="columns">
        id,username,ipaddr,msg,status,access_time,create_time,update_time
    </sql>

    <select id="selectPage" resultMap="SysLoginLog">
        select
        <include refid="columns"></include>
        from sys_login_log
        <where>
            <if test="vo.username != null and vo.username != ''">
                and username like CONCAT('%',#{vo.username},'%')
            </if>
            <if test="vo.createTimeBegin != null and vo.createTimeBegin != ''">
                and create_time >= #{vo.createTimeBegin}
            </if>
            <if test="vo.createTimeEnd != null and vo.createTimeEnd != ''">
                and create_time &lt;= #{vo.createTimeEnd}
            </if>
            and is_deleted = 0
        </where>
        order by id desc
    </select>
</mapper>
